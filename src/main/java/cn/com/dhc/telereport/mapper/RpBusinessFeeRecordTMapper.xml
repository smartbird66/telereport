<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace属性值与接口全限定名对应 -->
<mapper namespace="cn.com.dhc.telereport.mapper.RpBusinessFeeRecordTMapper">
    <!-- select元素表示定义一个查询语句，
            id属性值与接口中的方法名对应，
            resultType属性值指定实体类的全限定名
            parameterType属性值指定参数类型的全限定名-->
    <select id="selectByInfo" parameterType="cn.com.dhc.telereport.entity.RpBusinessFeeRecordT"
            resultType="cn.com.dhc.telereport.entity.RpBusinessFeeRecordT">
        SELECT id,city_code,product_code,business_type_code,business_record_date,
        business_fee,record_operator
        FROM rp_business_fee_record_t
        <where>
            <!-- 对于字符串来说既要判断null，也要判断空字符串 -->
            <!-- 在test属性中和＃{}中使用的是实体类（参数）中的数据域，不在这里的指的是表中的列名。 -->
            <if test="cityCode != null and cityCode != '' ">
                AND city_code=#{cityCode}
            </if>
            <if test="productCode != null and productCode != ''">
                AND product_code LIKE #{productCode}
            </if>
            <if test="businessTypeCode != null and businessTypeCode != ''">
                AND business_type_code LIKE #{businessTypeCode}
            </if>
            <if test="businessRecordDate!= null">
                AND TO_CHAR(business_record_date,'YYYYMM')=TO_CHAR(#{businessRecordDate},'YYYYMM')
            </if>
        </where>
    </select>
    <insert id="input" parameterType="cn.com.dhc.telereport.entity.RpBusinessFeeRecordT">
        insert into rp_business_fee_record_t(city_code,product_code,business_type_code,business_record_date)
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cityCode != null">
                #{cityCode,jdbcType=VARCHAR},
            </if>
            <if test="productCode != null">
                #{productCode,jdbcType=VARCHAR},
            </if>
            <if test="businessTypeCode != null">
                #{businessTypeCode,jdbcType=VARCHAR},
            </if>
            <if test="businessRecordDate != null">
                #{businessRecordDate},jdbcType=DATE}
            </if>
        </trim>
    </insert>
    <delete id="delete" parameterType="cn.com.dhc.telereport.entity.RpBusinessFeeRecordT">
           delete from rp_business_fee_record_t where id = #{id};
   </delete>
</mapper>